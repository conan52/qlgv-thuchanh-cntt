@using MvcPaging
@using TKBThucHanh.Models
@using TKBThucHanh.Views
@model MvcPaging.IPagedList<TKBThucHanh.Models.GiangVien>

@{
    ViewBag.Title = "Giảng viên";
    ViewBag.PageTitle = "Quản lý giảng viên";
    ViewBag.PageSubTitle = "Danh sách giảng viên";
}
<p>
    @Html.ActionLink("Thêm giảng viên", "Create")
</p>
@using (Html.BeginForm("Paging", "GiangVien", FormMethod.Get, new {@class = "form-horizontal"}))
{
    <div class="form-group">
        <div class="col-sm-5">
            <input class="col-sm-5 form-control" type="text" name="(@Model.First().HoVaTen)" placeholder="Tên hiển thị" value="@ViewData["tengiangvien"]" />
            <button class="btn btn-default col-sm-4" type="submit">
                <i class="icon-search"></i>Tìm giảng viên
            </button>
        </div>
    </div>

    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.First().MaGv)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().HoVaTen)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().ChuyenNganh)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().CoThePhanCong)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().LichCongTac)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (GiangVien item in Model)
            {
                <tr>
                    <td>
                        @item.MaGv
                    </td>
                    <td>
                        @item.HoVaTen
                    </td>
                    <td>
                        @item.ChuyenNganh
                    </td>
                    <td>
                        @item.CoThePhanCong
                    </td>
                    <td>
                        @item.LichCongTac
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="pager">
        @Html.Raw(Html.Pager(
            new Options
            {
                PageSize = Model.PageSize,
                TotalItemCount = Model.TotalItemCount,
                CurrentPage = Model.PageNumber,
                ItemTexts = new ItemTexts {Next = "Next", Previous = "Previous"},
                ItemIcon = new ItemIcon {First = "icon-backward", Previous = "icon-chevron-left", Next = "icon-chevron-right", Last = "icon-forward"},
                TooltipTitles = new TooltipTitles {Next = "Next page {0}", Previous = "Previous page {0}", Page = "Go to page {0}"},
                Size = Size.normal,
                Alignment = Alignment.centered,
                IsShowControls = true,
                IsShowFirstLast = true,
                IsShowPages = true
            }, new {tengiangvien = ViewData["tengiangvien"]}))
    </div>
}