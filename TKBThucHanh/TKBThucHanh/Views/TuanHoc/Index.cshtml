@using TKBThucHanh.Models
@model IEnumerable<TKBThucHanh.Models.TuanHoc>
@{
    ViewBag.Title = "Tuần học";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<p>
    <button id="btnCreateModel" type="button" class="btn btn-primary" data-loading-text="Xin vui lòng đợi...">Thêm mới</button>
</p>
<table class="table table-bordered table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SttTuan)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NamHoc)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NgayBatDau)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NgayKetThuc)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DaLayThongTin)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DaXepLichThucHanh)
        </th>
        <th></th>
    </tr>

    @foreach (TuanHoc item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SttTuan)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NamHoc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgayBatDau)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgayKetThuc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DaLayThongTin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DaXepLichThucHanh)
            </td>
            <td>
                <a class="" href="#" onclick="Edit(@item.TuanHocId)">Sửa</a>
                @Html.ActionLink("Xóa", "Delete", new { id = item.TuanHocId })
            </td>
        </tr>
    }

</table>

@section customScript
{
    <script>
        $(document).ready(function () {
            $('#editModalSubmit').click(function () {
                $(this).button('loading');
                $('#frmAjax').submit();
                return false;
            });

            $('#btnCreateModel').click(function () {
                SetModalTile("Thêm mới");
                $('#editModal').modal('show');
                AjaxCreate();
            });


        });

        function Edit(id) {
            SetModalTile("Sửa thông tin");
            $('#editModal').modal('show');
            var url = "@Url.Action("Edit")" + '/' + id;
            $.get(url, function (data) {
                $('#insertOrUpdataModal').html(data);
            });
        
        }




        function AjaxCreate() {
            var url = "@Url.Action("Create")";
            $.get(url, function (data) {
                $('#insertOrUpdataModal').html(data);
            });
        }



        function CheckAjaxResult(obj) {
            $('#editModalSubmit').button('reset');
            if (obj.Result == "OK") {
                $('#editModal').modal('hide');
                alert('Thành công');
            } else {
                $('#errMessage').text(obj.Message);
            }
        }
        function AjaxRequestFail() {
            $('#errMessage').text('Lỗi kết nối!');
            $('#editModalSubmit').button('reset');
        }

    </script>

}
