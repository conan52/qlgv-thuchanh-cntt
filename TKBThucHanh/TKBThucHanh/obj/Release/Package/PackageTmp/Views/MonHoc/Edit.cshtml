@model TKBThucHanh.Models.MonHoc

@{
    ViewBag.Title = "Môn học";
    ViewBag.PageSubTitle = "Sửa thông tin môn học";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("Edit", "MonHoc", null, FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>

        <div class="form-group">
            @Html.LabelFor(model => model.TenMonHoc, new { @class = "control-label col-sm-2" })
            <div class="col-sm-5">
                @Html.EditorFor(model => model.TenMonHoc, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.TenMonHoc)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ChuyenNganh, new { @class = "control-label col-sm-2" })
            <div class="col-sm-5">
                @Html.TextBoxFor(model => model.ChuyenNganh, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ChuyenNganh)
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <input class="btn btn-default" type="submit" value="Lưu thông tin"/>
            </div>
        </div>
    </fieldset>
}

<div>
    @Html.ActionLink("Trở về trang danh sách Môn học", "Index")
</div>

