@model IEnumerable<TKBThucHanh.Models.MonHoc>

@{
    ViewBag.Title = "Môn học";
    ViewBag.PageSubTitle = "Danh sách môn học";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<p>
    @Html.ActionLink("Thêm mới môn học", "Create")
</p>
<table class="table table-bordered table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TenMonHoc)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ChuyenNganh)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenMonHoc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ChuyenNganh)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.TenMonHoc }) |
                @Html.ActionLink("Xem", "Details", new { id = item.TenMonHoc }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.TenMonHoc })
            </td>
        </tr>
    }

</table>
