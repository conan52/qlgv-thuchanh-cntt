@model TkbThucHanhCNTT.Models.Viewer.RegisterAdminModelView
@{
    ViewBag.Title = "Tạo tài khoản quản trị";
}

@using (Html.BeginForm("Index", "RegisterAdmin", FormMethod.Post, new {@class = "form-horizontal"}))
{
    @Html.ValidationSummary(null, new {@class = "text-danger"})
    @Html.AntiForgeryToken()

    <fieldset>

        <legend>Tạo tài khoản quản trị</legend>
        <p class="message-success info">@ViewBag.StatusMessage</p>
        <div class="form-group">
            @Html.LabelFor(m => m.MaGv, new {@class = "col-sm-2 control-label"})
            <div class="col-sm-4">
                @Html.TextBoxFor(m => m.MaGv, new {@class = "form-control", @placeholder = "Mã giảng viên"})
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.HoVaTen, new {@class = "col-sm-2 control-label"})
            <div class="col-sm-4">
                @Html.TextBoxFor(m => m.HoVaTen, new {@class = "form-control", @placeholder = "Họ và tên"})
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default">Tạo mới</button>
            </div>
        </div>
    </fieldset>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}