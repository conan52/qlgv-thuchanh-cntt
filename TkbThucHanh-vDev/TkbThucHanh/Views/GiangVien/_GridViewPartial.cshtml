@using TkbThucHanh.Models
@using TkbThucHanh.Models.Enums
@using TkbThucHanh.Models.Provider
@using TkbThucHanh.ViewSettings
@{
    GridViewExtension grid = Html.DevExpress().GridView(settings =>
    {
        settings.Name = "GridView";
        settings.CallbackRouteValues = new {Controller = "GiangVien", Action = "GridViewPartial"};

        settings.SettingsEditing.AddNewRowRouteValues = new {Controller = "GiangVien", Action = "GridViewPartialAddNew"};
        settings.SettingsEditing.UpdateRowRouteValues = new {Controller = "GiangVien", Action = "GridViewPartialUpdate"};
        settings.SettingsEditing.DeleteRowRouteValues = new {Controller = "GiangVien", Action = "GridViewPartialDelete"};
        settings.KeyFieldName = "MaGv";
        settings.SettingDefaultColumn();


        settings.Columns.Add(column =>
        {
            column.FieldName = "MaGv";
            column.Caption = "Mã giảng viên";
        });

        settings.Columns.Add(column =>
        {
            column.FieldName = "HoVaTen";
            column.Caption = "Họ và tên";
        });

        settings.Columns.Add(column =>
        {
            column.FieldName = "ChuyenNganh";
            column.Caption = "Chuyên ngành";
            column.ColumnType = MVCxGridViewColumnType.ComboBox;
            var comboBoxProperties = column.PropertiesEdit as ComboBoxProperties;


            comboBoxProperties.DataSource = EnumUltils.GetDescriptions_ChuyenNganh();
            comboBoxProperties.TextField = "Description";
            comboBoxProperties.ValueField = "Value";
            comboBoxProperties.ValueType = typeof(int);
        });


        settings.Columns.Add(column =>
        {
            column.FieldName = "UserProfileId";
            column.Caption = "Tài khoản đăng nhập";
            column.ColumnType = MVCxGridViewColumnType.ComboBox;
            var comboBoxProperties = column.PropertiesEdit as ComboBoxProperties;


            comboBoxProperties.DataSource = DataProvider<UserProfile>.GetAll();
            comboBoxProperties.TextField = "UserName";
            comboBoxProperties.ValueField = "UserID";
        });


        settings.Columns.Add(column =>
        {
            column.FieldName = "CoThePhanCong";
            column.Caption = "Có thể phân công";
            column.ColumnType = MVCxGridViewColumnType.CheckBox;
        });
    });
    if (ViewData["EditError"] != null)
    {
        grid.SetEditErrorText((string) ViewData["EditError"]);
    }
}
@grid.Bind(Model).GetHtml()