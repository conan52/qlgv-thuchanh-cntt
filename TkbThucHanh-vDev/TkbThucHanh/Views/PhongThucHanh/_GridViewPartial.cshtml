@{
    GridViewExtension grid = Html.DevExpress().GridView(settings =>
    {
        settings.Name = "GridView";
        settings.CallbackRouteValues = new {Controller = "PhongThucHanh", Action = "GridViewPartial"};

        settings.SettingsEditing.AddNewRowRouteValues = new {Controller = "PhongThucHanh", Action = "GridViewPartialAddNew"};
        settings.SettingsEditing.UpdateRowRouteValues = new {Controller = "PhongThucHanh", Action = "GridViewPartialUpdate"};
        settings.SettingsEditing.DeleteRowRouteValues = new {Controller = "PhongThucHanh", Action = "GridViewPartialDelete"};
        settings.KeyFieldName = "PhongThucHanhId";
        settings.Columns.Add(column =>
        {
            column.Caption = "Tên phòng";
            column.FieldName = "TenPhong";
        });
    });
    if (ViewData["EditError"] != null)
    {
        grid.SetEditErrorText((string) ViewData["EditError"]);
    }
}
@grid.Bind(Model).GetHtml()