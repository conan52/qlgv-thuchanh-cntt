@model IEnumerable<TKBThucHanh.Models.GiangVien>

@{
    ViewBag.Title = "Giảng viên";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<p>
    @Html.ActionLink("Thêm mới", "Create")
</p>
<table class="table table-bordered table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.HoVaTen)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ChuyenNganh)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CoThePhanCong)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.HoVaTen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ChuyenNganh)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CoThePhanCong)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.MaGv }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.MaGv })
            </td>
        </tr>
    }

</table>
