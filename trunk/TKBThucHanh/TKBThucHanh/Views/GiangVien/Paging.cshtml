@using MvcPaging
@using TKBThucHanh.Models
@model IPagedList<TKBThucHanh.Models.GiangVien>
@{
    ViewBag.Title = "Giảng viên";
    ViewBag.PageTitle = "Quản lý giảng viên";
    ViewBag.PageSubTitle = "Danh sách giảng viên";
}
<p>
    @Html.ActionLink("Thêm giảng viên", "Create")
</p>
<div class="clearfix">
</div>
@using (Html.BeginForm("Paging", "GiangVien", FormMethod.Get))
{
    <div class="input-append">
        <input class="span2" id="appendedInputButton" type="text" name="employee_name" placeholder="Name" value="@ViewData["employee_name"]" />
        <button class="btn" type="submit">
            <i class="icon-search"></i>Search
        </button>
    </div>
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.First().MaGv)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().HoVaTen)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().ChuyenNganh)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().CoThePhanCong)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().LichCongTac)
                </th>
                <th>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (GiangVien item in Model)
            {
                <tr>
                    <td>
                        @item.MaGv
                    </td>
                    <td>
                        @item.HoVaTen
                    </td>
                    <td>
                        @item.ChuyenNganh
                    </td>
                    <td>
                        @Html.CheckBox("Check", @item.CoThePhanCong, new { @disabled = "disabled" })
                    </td>
                    <td>
                        @item.ChuyenNganh
                    </td>
                    <td>
                        @Html.ActionLink("Sửa", "Edit", new { /* id=item.PrimaryKey */ }) |
                        @Html.ActionLink("Xem", "Details", new { /* id=item.PrimaryKey */ }) |
                        @Html.ActionLink("Xóa", "Delete", new { /* id=item.PrimaryKey */ })
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="pager">
        @Html.Raw(Html.Pager(
            new Options
            {
                PageSize = Model.PageSize,
                TotalItemCount = Model.TotalItemCount,
                CurrentPage = Model.PageNumber,
                ItemTexts = new ItemTexts() { Next = "Next", Previous = "Previous" },
                ItemIcon = new ItemIcon() { First = "icon-backward", Previous = "icon-chevron-left", Next = "icon-chevron-right", Last = "icon-forward" },
                TooltipTitles = new TooltipTitles() { Next = "Next page {0}", Previous = "Previous page {0}", Page = "Go to page {0}" },
                Size = Size.normal,
                Alignment = Alignment.centered,
                IsShowControls = true,
                IsShowFirstLast = true,
                IsShowPages = true
            }, new { employee_name = ViewData["employee_name"] }))
    </div>
}
