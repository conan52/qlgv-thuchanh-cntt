@model TkbThucHanhCNTT.Models.LoginModel

@{
    ViewBag.Title = "Đăng nhập hệ thống";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title> @ViewBag.Title</title>
    @Scripts.Render("~/bundles/jquery")
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.min.js"></script>
    <style type="text/css">
        .modal-footer {
            border-top: 0;
        }
    </style>
</head>

<body>

    <!--login modal-->
    <div id="loginModal" class="modal show" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="text-center">Đăng nhập hệ thống</h1>
                </div>
                <div class="modal-body">
                    @using (Html.BeginForm("Login", "Account", new { ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form col-md-12 center-block" }))
                    {
                        @Html.ValidationSummary(null, new { @class = "text-danger" })
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control input-lg", @placeholder = "Tên đăng nhập" })
                        </div>
                        <div class="form-group">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control input-lg", @placeholder = "Mật khẩu" })
                        </div>
                        <div class="form-group">
                            <label class="checkbox">
                                @Html.CheckBoxFor(m => m.RememberMe, new { @checked = true }) Ghi nhớ đăng nhập
                            </label>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-primary btn-lg btn-block">Đăng nhập</button>
                        </div>
                    }
                </div>
                <div class="modal-footer">
                </div>
            </div>
        </div>
    </div>

</body>
</html>