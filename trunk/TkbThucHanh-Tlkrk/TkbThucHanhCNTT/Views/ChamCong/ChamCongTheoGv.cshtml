@using TkbThucHanhCNTT.Models.Viewer

@(this.Html.Kendo().Grid<ChamCongGrouped>()
      .Name("Grid")
      .Columns(columns =>
      {
    columns.Bound(m => m.Nhom);
               //  .Visible(false)
               
          columns.Bound(m => m.TenGv)
                .ClientGroupHeaderTemplate("Giáo viên: #= value # "); ;
          columns.Bound(m => m.TongSoTiet);
      })
      .Pageable()    
      .Sortable()        
      .DataSource(dataSource => dataSource
                                          .Ajax()
                                          .Aggregates(aggregates =>
                                          {
                                              aggregates.Add(p => p.TenGv);
                                          })
                                          .Group(groups => groups.Add(p => p.TenGv))

                                          .Read(read => read.Action("Read", "ChamCong"))))
