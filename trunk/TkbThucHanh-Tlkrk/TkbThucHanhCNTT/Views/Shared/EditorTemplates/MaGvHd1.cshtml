@model int?

@(Html.Kendo().DropDownListFor(m => m)
        .AutoBind(false)
        .OptionLabel("Chọn giảng viên")
        .DataTextField("HoVaTen")
        .DataValueField("MaGv")
        .DataSource(dataSource =>
        {
            dataSource.Read(read => read.Action("LayGvPhanCong", "Filter").Data("layGvPhanCong"))
                    .ServerFiltering(true);
        })
        .CascadeFrom("MonHocId")
)
@Html.ValidationMessageFor(m => m)

