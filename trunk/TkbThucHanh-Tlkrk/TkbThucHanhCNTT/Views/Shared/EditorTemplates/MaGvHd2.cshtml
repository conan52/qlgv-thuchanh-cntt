@model string
@(Html.Kendo().ComboBoxFor(m => m)
      .AutoBind(true)
      .Placeholder("Chọn giảng viên")
      .DataTextField("HoVaTen")
      .DataValueField("MaGv")
      .ValuePrimitive(true)

      .DataSource(dataSource =>
      {
          dataSource.Read(read => read.Action("LayDsGvRanh", "Filter").Data("locMaGv2"))
              .ServerFiltering(false);
      })
      .Filter(FilterType.Contains)
      .Suggest(true)
      .CascadeFrom("MonHocId")
          .HtmlAttributes(new { @style = "word-wrap: break-word;" })
      )
