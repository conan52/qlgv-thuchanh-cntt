@model string
@(this.Html.Kendo().ComboBoxFor(m => m)
      .AutoBind(false)
      .Placeholder("Chọn giảng viên")
      .DataTextField("HoVaTen")
      .DataValueField("MaGv")
      .ValuePrimitive(true)
      .DataSource(dataSource =>
      {
          dataSource.Read(read => read.Action("LayDsGvRanh", "Filter").Data("locMaGv3"))
                    .ServerFiltering(false);
      })
      .CascadeFrom("MonHocId")
      .Filter(FilterType.Contains)
      .Suggest(true)
)
@this.Html.ValidationMessageFor(m => m)

