@using DevExpress.XtraRichEdit.Layout
@using TkbThucHanh.ViewSettings
@{
    GridViewExtension grid = Html.DevExpress().GridView(settings =>
    {
        settings.Name = "GridView";
        settings.CallbackRouteValues = new {Controller = "Tuan", Action = "GridViewPartial"};

        settings.SettingsEditing.AddNewRowRouteValues = new {Controller = "Tuan", Action = "GridViewPartialAddNew"};
        settings.SettingsEditing.UpdateRowRouteValues = new {Controller = "Tuan", Action = "GridViewPartialUpdate"};
        settings.SettingsEditing.DeleteRowRouteValues = new {Controller = "Tuan", Action = "GridViewPartialDelete"};
        settings.KeyFieldName = "SttTuan";
        
        settings.Columns.Add(column =>
        {
            column.FieldName = "SttTuan";
            column.Caption = "Tuần học";
        });
        //settings.Columns.Add(column =>
        //{
        //    column.FieldName = "NamHoc";
        //    column.Caption = "Năm học";
        //    column.ColumnType = MVCxGridViewColumnType.SpinEdit;
        //    var spinProperties = column.PropertiesEdit as SpinEditProperties;
        //    spinProperties.MinValue = DateTime.Now.Year;
        //    spinProperties.MaxValue = DateTime.Now.Year+5;
        //    spinProperties.SpinButtons.ShowLargeIncrementButtons = false;
        //});
        
        settings.Columns.Add(column =>
        {
            column.FieldName = "NgayBatDau";
            column.Caption = "Ngày bắt đầu";
            column.ColumnType = MVCxGridViewColumnType.DateEdit;
            var editboxprop = column.PropertiesEdit as DateEditProperties;
            editboxprop.NullText = "dd/MM/yyyy";
            editboxprop.EditFormat = EditFormat.Custom;
            editboxprop.EditFormatString = "dd/MM/yyyy";
        });

        settings.Columns.Add(column =>
        {
            column.Caption = "Ngày kết thúc";

            column.FieldName = "NgayBatDau";
            column.ReadOnly = true;
            column.EditFormSettings.Visible = DefaultBoolean.False;
            column.ColumnType = MVCxGridViewColumnType.DateEdit;
            var editboxprop = column.PropertiesEdit as DateEditProperties;
            editboxprop.NullText = "dd/MM/yyyy";
            editboxprop.EditFormat = EditFormat.Custom;
            editboxprop.EditFormatString = "dd/MM/yyyy";

        });

        settings.Columns.Add(
        column =>
        {
            column.FieldName = "DaLayThongTin";
            column.Caption = "Đã lấy thông tin";
            column.ReadOnly = true;
            column.EditFormSettings.Visible = DefaultBoolean.False;
            column.ColumnType = MVCxGridViewColumnType.CheckBox;
        });
        settings.Columns.Add(
        column =>
        {
            column.FieldName = "DaXepLichThucHanh";
            column.Caption = "Đã lấy xếp lịch thực hành";
            column.ReadOnly = true;
            column.EditFormSettings.Visible = DefaultBoolean.False;
            column.ColumnType = MVCxGridViewColumnType.CheckBox;
        });
        settings.SettingDefaultColumn();
    });
    if (ViewData["EditError"] != null)
    {
        grid.SetEditErrorText((string) ViewData["EditError"]);
    }
}
@grid.Bind(Model).GetHtml()